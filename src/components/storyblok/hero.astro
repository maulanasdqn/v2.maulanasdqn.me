---
import { storyblokEditable } from "@storyblok/astro";
const { blok } = Astro.props
---

<section {...storyblokEditable(blok)} class="flex gap-x-1 items-start w-full h-full justify-between px-6 py-10">
  <div class="flex flex-col gap-y-4 w-1/2">
    <h1 class="text-white font-bold md:text-5xl text-2xl">{blok.title}</h1>
    <h2 class="text-white font-medium md:text-2xl text-sm">{blok.subtitle}</h2>
  </div>
</section>
