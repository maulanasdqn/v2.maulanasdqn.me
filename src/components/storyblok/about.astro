---
import { storyblokEditable } from "@storyblok/astro";
const { blok } = Astro.props

console.log(blok)

---
<h1 class="text-white font-bold md:text-4xl text-2xl text-left">{blok.title}</h1>
<section {...storyblokEditable(blok)} class="flex flex-col md:flex-row md:gap-x-4 items-center h-full justify-between min-w-[600px]">
  <div class="flex flex-col w-full md:items-start items-center">
    <p class="text-white font-medium md:text-lg text-sm mb-4">{blok.subtitle}</p>
    <p class="text-white">{blok.description}</p>
  </div>
  <img width="300" src={blok.image.filename} alt={blok.image.alt} />
</section>
